@model DE4.Models.TuyenTruyen
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa công việc</h2>

<div class="w3agile-validation w3ls-validation">
    <div class="panel panel-widget agile-validation">
        <div class="validation-grids widget-shadow" data-example-id="basic-forms">
            <div class="input-info">
                <h3>Thông tin công việc :</h3>
            </div>
            <div class="form-body form-body-info">
                <form data-toggle="validator" novalidate="true" action="#" method="post">
                    <div class="form-group ">
                        <input type="text" class="form-control" id="TieuDe" placeholder="Tiêu đề" value="@Model.TieuDe" name="TieuDe" required="">
                    </div>

                    <div class="form-group">
                        <textarea placeholder="Mô tả" class="form-control" rows="5" id="MoTa" name="MoTa">@Model.MoTa</textarea>


                    </div>


                    <div class="form-group">
                        <input type="text" class="form-control" id="" name="" value="@Model.NgayBD.Value.Day - @Model.NgayBD.Value.Month - @Model.NgayBD.Value.Year" readonly>
                        <input type="date" class="form-control" id="NgayBD" name="NgayBD" value="@Model.NgayBD.Value.Day - @Model.NgayBD.Value.Month - @Model.NgayBD.Value.Year" required="">

                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" id="" name="" value="@Model.NgayKT.Value.Day - @Model.NgayKT.Value.Month - @Model.NgayKT.Value.Year" readonly>
                        <input type="date"  class="form-control" id="NgayKT" name="NgayKT" value="@Model.NgayKT.Value.Date - @Model.NgayKT.Value.Month - @Model.NgayKT.Value.Year" required="">

                    </div>
                    <div class="form-group">
                        <input type="text" min="1" class="form-control" id="TenDonVi" placeholder="Tên đơn vị" name="TenDonVi" value="@Model.TenDonVi" required="">

                    </div>

                    <br />
                    <div class="bottom">

                        <div class="form-group">
                            <button type="submit" onclick="return checkday()" class="btn btn-primary ">Sửa</button>
                        </div>
                        <div class="clearfix"> </div>
                    </div>

                </form>
            </div>
        </div>
    </div>



</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>
    var status = false;
    $('#TinhTrang').change(function () {
        // Get the value of the radio button with the specified ID
        var selectedValue = $('input[name="TinhTrang"]:checked').val();
        console.log(selectedValue)
        if (selectedValue == "true") {
            status = true;
            $("#ProfileUser").css("display", "block");

        } else {
            $("#ProfileUser").css("display", "none");
        }
    });

    function checkday() {

        var CCCD = $("#CCCD").val();
        var Phone = $("#Phone").val();
        console.log(CCCD.length)
        if (CCCD.length != 12) {
            var text = "CCCD phải có 12 ký tự";
            window.location.href = "https://localhost:44329/Home/Error?MaError=" + text
            return false;
        }
        if (Phone.length != 10) {
            var text = "Phone phải có 10 ký tự";
            window.location.href = "https://localhost:44329/Home/Error?MaError=" + text
            return false;
        }



        return true;
    }
</script>




